# Telegram Bot Configuration
# Copy this file to .env and fill in your values

# Bot Token (REQUIRED)
# Get this from @BotFather on Telegram
# Create a bot: /newbot
# Get token: /token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# DM Pairing (Security Feature)
# If true, users must use /start before sending messages
# Recommended: true
TELEGRAM_DM_PAIRING_REQUIRED=true

# Rate Limiting
# Maximum messages per minute per user
# Recommended: 20
TELEGRAM_RATE_LIMIT_PER_MIN=20

# Allowed Users (Optional)
# Comma-separated Telegram user IDs
# If set, only these users can interact with the bot
# Leave empty to allow all paired users
TELEGRAM_ALLOWED_USERS=

# Bot Behavior
# Command prefix for bot commands
BOT_COMMAND_PREFIX=/

# Default personality name
# Options: curious, playful, calm, energetic
BOT_PERSONALITY_DEFAULT=curious

# Environment
# Set to production for production deployment
NODE_ENV=development

# Optional: Webhook configuration (for production)
# TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
# TELEGRAM_WEBHOOK_SECRET=your_webhook_secret
